<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_cat_view"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.tvisha.click2magic.CustomFontViews.PoppinsTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category"
        tools:text="Category"
        android:textColor="@color/categoryNameColor"
        android:padding="3dp"
        android:background="@drawable/tag_grey_bg"
        android:layout_marginRight="@dimen/view_margin_small"
        android:layout_marginBottom="@dimen/view_margin"
        android:gravity="center"/>

</FrameLayout>