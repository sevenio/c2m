<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/back_action_bar_bg_color"
    android:gravity="center_vertical"
    android:orientation="horizontal"

    >

    <LinearLayout
        android:id="@+id/backLayout"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/defultSpacing">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_14dp"
            app:srcCompat="@drawable/ic_white_back_arrow" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tvisha.click2magic.CustomFontViews.PoppinsTextView
            android:id="@+id/other_agent_name_tv"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text" />





    </RelativeLayout>


</LinearLayout>