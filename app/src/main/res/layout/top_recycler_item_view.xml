<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="7dp"
    android:clickable="false"
    android:gravity="center"
    android:id="@+id/main_lay"
    android:orientation="horizontal"
    android:background="@drawable/user_name_inactive_rect_bg"
  >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="horizontal">

        <View
            android:id="@+id/userStatusLine"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/onlineViewColor"/>

        <com.tvisha.click2magic.CustomFontViews.PoppinsMediumTextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:clickable="false"
            android:gravity="bottom"
            android:paddingTop="@dimen/defultSpacing"
            android:paddingLeft="@dimen/defultSpacing"
            android:paddingRight="@dimen/defultSpacing"
            android:paddingBottom="@dimen/defultSpacing"
            android:text="upendra"
            android:textAllCaps="true"
            android:textColor="@color/single_chat_user_name_color"
            android:textSize="@dimen/small_text" />


            <com.tvisha.click2magic.CustomFontViews.PoppinsTextView
                android:id="@+id/message_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="0"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:minWidth="@dimen/count_icon_size"
                android:minHeight="@dimen/count_icon_size"
                android:textColor="@color/single_chat_count_color"
                android:textSize="@dimen/small_text" />


    </LinearLayout>


</RelativeLayout>
